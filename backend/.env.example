# Server Configuration
PORT=8000

# MongoDB Atlas Connection
# Get your connection string from: MongoDB Atlas -> Connect -> Connect your application
# Format: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/Eco-finds?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/Eco-finds?retryWrites=true&w=majority

# JWT Secret (change this to a random secure string)
JWT_SECRET=your-secret-key-here-change-this-in-production
